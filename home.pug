  #instructors-section
  h2(style="text-align: center; margin-bottom: 30px;") Meet Our Instructors

  .instructor-container
    each instructor, index in instructors
      .instructor-card(onclick=`openModal(${index})`)
        img(src=instructor.img, alt=instructor.name)
        h3= instructor.name
        p Teaches: #{instructor.style}
        p Experience: #{instructor.exp}

  // Modal popups
  each instructor, index in instructors
    .modal(id=`modal-${index}`)
      .modal-content
        span.close(onclick=`closeModal(${index})`) &times;
        h2= instructor.name
        p Style: #{instructor.style}
        p Experience: #{instructor.exp}
        p #{instructor.bio}

    script(src="/static/js files/modal.js")
  #cta-section
    .cta-container
      .cta-content
        h2 Ready to dance?
        p Book a free class today and experience the rhythm!
        button#open-register-btn Register Now

  #register-modal
    .register-modal-content
      span#close-register-btn &times;
      h2 Register for Free Class
      form(action="/register", method="POST")
        input(type="text", name="name", placeholder="Your Name", required)
        input(type="email", name="email", placeholder="Your Email", required)
        input(type="tel", name="phone", placeholder="Phone Number", required)
        select(name="style")
          option(value="") Select Dance Style
          option(value="hiphop") Hip-Hop
          option(value="ballet") Ballet
          option(value="salsa") Salsa
          option(value="contemporary") Contemporary
        textarea(name="message", placeholder="Any message (optional)")
      button(type="submit") Submit
    script(src="/static/js files/registermodal.js")
    button(onclick="window.location.href='/login'") Login
    button(onclick="window.location.href='/signup'") Sign Up


